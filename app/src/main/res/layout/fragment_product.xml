<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProductFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/colorSecondary"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Menu List"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="27sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Bowl"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/product"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/beef_bowl"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:text="Beef Bowl"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rp 9000.00"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/minButton_bb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_minus"/>

                            <TextView
                                android:id="@+id/sum_bb"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="0"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/plusButton_bb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_plus"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/product"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cheese_beef_bowl"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="@color/black"
                            android:text="Cheese Beef Bowl"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rp 11000.00"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/minButton_cbb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_minus"/>

                            <TextView
                                android:id="@+id/sum_cbb"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="0"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/plusButton_cbb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_plus"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/product"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ontama_beef_bowl"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:text="Ontama Beef Bowl"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rp 10500.00"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/minButton_obb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_minus"/>

                            <TextView
                                android:id="@+id/sum_obb"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="0"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/plusButton_obb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_plus"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="27sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Japanese Curry"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/product"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/curry_chicken_katsu"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20.5sp"
                            android:textColor="@color/black"
                            android:text="Curry Chicken Katsu"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rp 12900.00"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/minButton_cck"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_minus"/>

                            <TextView
                                android:id="@+id/sum_cck"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="0"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/plusButton_cck"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_plus"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/product"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/curry_beef"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:text="Curry Beef"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rp 9900.00"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/minButton_cb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_minus"/>

                            <TextView
                                android:id="@+id/sum_cb"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="0"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/plusButton_cb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_plus"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/product"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/curry_cheese_beef"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:text="Curry Cheese Beef"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Rp 11900.00"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="70dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/minButton_ccb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_minus"/>

                            <TextView
                                android:id="@+id/sum_ccb"
                                android:layout_width="35dp"
                                android:layout_height="40dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="0"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/plusButton_ccb"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_plus"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_order"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Order"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>